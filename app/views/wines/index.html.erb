<h1>Listing wines</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Type</th>
      <th>Year</th>
      <th>Picture</th>
      <th>Rating</th>
      <th>Description</th>
      <th>Color</th>
      <th>Bubbly</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.brand %></td>
        <td><%= wine.type %></td>
        <td><%= wine.year %></td>
        <td><%= wine.picture %></td>
        <td><%= wine.rating %></td>
        <td><%= wine.description %></td>
        <td><%= wine.color %></td>
        <td><%= wine.bubbly %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

